{
  "name": "safe-prop",
  "version": "0.1.0",
  "description": "Safe property checks with Maybe ADT",
  "main": "bundle/index.umd.js",
  "module": "bundle/index.esm.js",
  "files": [
    "bundle/index.umd.js",
    "bundle/index.esm.js",
    "LICENSE.md"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "build:dist": "rollup -c rollup.dist.config.js",
    "test": "npm run format && babel-tape-runner __tests__/lib/*.test.js | ./node_modules/.bin/tap-spec",
    "test:bundle": "babel-tape-runner __tests__/bundle/*.test.js | ./node_modules/.bin/tap-spec",
    "format": "standard --fix && standard"
  },
  "standard": {
    "ignore": [
      "/bundle/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/wking-io/safe-prop.git"
  },
  "keywords": [
    "maybe",
    "adt",
    "functional",
    "safe"
  ],
  "author": "Will King <contact@wking.io> (https://www.wking.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wking-io/safe-prop/issues"
  },
  "homepage": "https://github.com/wking-io/safe-prop#readme",
  "dependencies": {
    "data.maybe": "1.2.3"
  },
  "devDependencies": {
    "@babel/cli": "7.1.5",
    "@babel/plugin-external-helpers": "7.0.0",
    "@babel/preset-env": "7.1.5",
    "babel-tape-runner": "3.0.0",
    "coveralls": "3.0.2",
    "eslint": "5.8.0",
    "husky": "1.1.3",
    "riteway": "4.0.0",
    "rollup": "0.67.0",
    "rollup-plugin-babel": "4.0.3",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-includepaths": "0.2.3",
    "rollup-plugin-node-resolve": "3.4.0",
    "rollup-plugin-terser": "3.0.0",
    "rollup-plugin-uglify": "6.0.0",
    "standard": "12.0.1",
    "tap-spec": "5.0.0"
  }
}
